{
	"name": "next-ts-template",
	"version": "1.0.0",
	"description": "Next.js with TypeScript / Husky (Lint-staged) / PM2 / ESLint / Prettier",
	"private": true,
	"author": {
		"name": "Jerren T",
		"email": "Jerren@trifall.com"
	},
	"scripts": {
		"dev": "next dev",
		"build": "yarn install && next build",
		"start": "next start",
		"lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --cache --fix --ignore-path ./.gitignore",
		"format": "prettier --ignore-path .gitignore --log-level warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"pipeline": "yarn install && yarn format && yarn lint && next build",
		"prepare": "husky install"
	},
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@libsql/client": "^0.3.5",
		"next": "^13.5.6",
		"next-auth": "^4.24.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.4.1",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.6",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.44.0",
		"eslint-config-next": "^13.5.6",
		"eslint-config-prettier": "^8.8.0",
		"husky": ">=6",
		"lint-staged": ">=10",
		"postcss": "^8.4.31",
		"prettier": "^3.0.0",
		"tailwindcss": "^3.3.3",
		"typescript": "5.2.2"
	}
}
